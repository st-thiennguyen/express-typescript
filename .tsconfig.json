{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "Node",
    "outDir": "dist",
    "importsNotUsedAsValues": "remove",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noPropertyAccessFromIndexSignature": false,
    "skipLibCheck": true,
    "types": ["vites/globals"]
  },
  "extends": [],
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
